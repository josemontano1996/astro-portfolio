---
import { Image } from 'astro:assets';
import Logo from '../../assets/logo.webp';
import { ScrollToIdLink } from '../ScrollToIdLink';
import { ContactButton } from './ContactButton';

const links = [
  { id: 'about', text: 'About' },
  { id: 'experience', text: 'Experience' },
  { id: 'projects', text: 'Projects' },
];

const { locale } = Astro.params;
---

<header id='header' class='z-20 sticky top-0 py-4 px-6 w-full left-0 bg-background'>
  <nav class='flex items-center'>
    <div class='w-full flex justify-between items-center max-w-8xl mx-auto'>
      <a href={`/${locale}`} class='flex items-center gap-2'>
        <Image src={Logo} alt='logo image' class='w-auto h-14 object-contain' />
      </a>

      <ul class='list-none hidden sm:flex flex-row gap-10'>
        {
          links.map(({ id, text }) => (
            <li class='hover:text-white text-[18px] font-medium cursor-pointer text-secondary'>
              <ScrollToIdLink id={id} text={text} client:load />
            </li>
          ))
        }
        <li class={`hover:text-white text-[18px] font-medium cursor-pointer  text-secondary`}>
          <ContactButton t='Contact' client:load />
        </li>
      </ul>
      <!-- TODO: include mobile menu -->
      <!-- <MobileRightMenu /> -->
    </div>
  </nav>
</header>
