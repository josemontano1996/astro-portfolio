---

import type { IProjectsSection } from '@/interfaces/home-page';
import ProjectCard from './ProjectCard.astro';

interface Props {
  t: IProjectsSection;
}
const { t } = Astro.props;
---

<section id='projects' class='my-10 max-w-screen'>
  <div>
    <h5 class='sm:text-[18px] text-[14px] text-secondary uppercase tracking-wider'>{t.uppertitle}</h5>
    <h2 class='text-white font-black md:text-[60px] sm:text-[50px] xs:text-[40px] text-[30px]'>
     {t.title}
    </h2>
  </div>

  <div class='my-8'>
    <h4 class='sm:text-[18px] text-[14px] text-secondary uppercase tracking-wider'>
      {t.finishedProyectsTitle}
    </h4>
    <div class='mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-7'>
      {
        t.projects.map((project) => (
            <ProjectCard  {...project} />
        ))
      }
    </div>
    <div class='my-8'>
      <h4 class='sm:text-[18px] text-[14px] text-secondary uppercase tracking-wider'>
        {t.inProgressTitle}
      </h4>
      <div  class='mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-7'>
        {
          t.inprogress?.map((project) => (
            <ProjectCard  {...project} />
          ))
        }
      </div>
    </div>
  </div>
</section>
 