---
import type { ITechSection } from '@/interfaces/home-page';
import { TechCard } from './TechCard';
interface Props {
  t: ITechSection;
}
const { t } = Astro.props;
---

<section class="my-4 mb-8">
  <h5 class='sm:text-[18px] text-[14px] text-secondary uppercase tracking-wider'>{t.upperTitle}</h5>
  <div class='lg:flex gap-8'>
    <div>
      <h2 class='text-white font-black md:text-6xl sm:text-5xl text-4xl my-4'>
        {t.title}
      </h2>
      <div class='text-lg tracking-wide'>
        {t.body}
      </div>
    </div>
    <div class='mt-10 flex flex-col items-center lg:mt-24'>
      <TechCard cards={t.cards} client:visible />
    </div>
  </div>
</section>
